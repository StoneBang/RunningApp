<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hbb.coder.crimenalintent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".activity.CrimeListActivity"
            android:theme="@style/AppTheme.StatusBarWhite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CrimeActivity"
            android:theme="@style/AppTheme.StatusBarWhite" />
        <activity
            android:name=".activity.CrimePageActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.CrimeListActivity" />
        <activity android:name=".activity.TestActivity">



        </activity>
    </application>

</manifest>